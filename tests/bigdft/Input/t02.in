# Test a dihydrogen molecule with BigDFT
# Use the DIIS for wavefunctions instead of steepest descent.

 nstep 20

 acell 3*7
 ecut 10
 kpt   0 0 0
 natom  2 
 nband 1
 nkpt  1
 nsym  1
 ntypat  1
 rprim   1 0 0  0 1 0  0 0 1
 symrel  1 0 0  0 1 0  0 0 1    
 toldfe 1.0d-6
 typat  1 1
 xcart  3.0 3.5 3.5
        4.0 3.5 3.5
 znucl 1 1

 usewvl 1
 iscf 2
 optforces 0
 optstress 0
 wvl_hgrid 0.5
 icoulomb 1
 nscforder 14
 nwfshist 8
 wvl_nprccg 5

 prteig 0
