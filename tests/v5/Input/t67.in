# SiC in zinc-blende structure
# updating G and W by scissor operator 

acell 3*7.87
 rprim   0 .5 .5  .5 0 .5  .5 .5 0
 natom  2
 ntypat  2
 typat  1 2
 xred   0.000  0.000  0.000
        0.250  0.250  0.250
 znucl 6.0 14.0
 ecut 6

 enunit 2  
 intxc  1

 ndtset 7 

# wavefunction calculation
 kptopt1       1
 ngkpt1        2 2 2
 nshiftk1      4
 shiftk1       0.5 0.5 0.5
               0.5 0.0 0.0
               0.0 0.5 0.0
               0.0 0.0 0.5
 mkmem1        0

 nbandkss1     -1
 npwkss1      0
 occopt1       1  

 prtvol1       0
 nline1        3
 nstep1       10
 tolwfr1       1.0d-16

# W0
 optdriver2 3
 getkss2   1
 npweps2   27
 npwwfn2   27
 ppmfrq2  13.6058 eV

# sigma calculation === G0W0
 optdriver3 4
 getkss3    1
 getscr3    2
 npwsigx3   27
 npwwfn3   27
 ppmfrq3  13.6058 eV
 nkptgw3     1
 kptgw3   0.250  0.750  0.250 
 bdgw3    4  5
 zcut3      0.1 eV
# sigma calculation  GW0
 optdriver4 4
 getkss4    1
 getscr4    2
 ppmodel4   1
 npwsigx4   27
 npwwfn4    27
 nkptgw4     1
 kptgw4   0.250  0.750  0.250
 bdgw4    4  5
 zcut4      0.1 eV
 soenergy4 1.0 eV 

# W calculation
 optdriver5 3
 getkss5   1
 npweps5   27
 npwwfn5   27
 ppmfrq5  13.6058 eV
 soenergy5  1.0 eV
 
# sigma calculation  G0W
 optdriver6 4
 getkss6    1
 getscr6    5
 ppmodel6   1
 npwsigx6   27
 npwwfn6    27
 nkptgw6     1
 kptgw6   0.250  0.750  0.250
 bdgw6    4  5
 zcut6      0.1 eV

# sigma calculation  GW  
 optdriver7 4
 getkss7    1
 getscr7    5
 ppmodel7   1
 npwsigx7   27
 npwwfn7    27
 nkptgw7     1
 kptgw7   0.250  0.750  0.250
 bdgw7    4  5
 zcut7   0.1 eV
 soenergy7  1.0 eV

# valid for all datasets

 nband     10

# This line added when defaults were changed (v5.3) to keep the previous, old behaviour
  iscf 5
