# Crystalline alpha-quartz
# Calculation of the GW corrections with and without non-symmorphic operations

ndtset 6

# DATASET 1 : KSS calculations using only symmorphic operations
symmorphi1  0        #use only symmorphic operations
nbandkss1   50       # number of bands in kss file (-1 means the maximum possible)
nband1      24       # number of (occ and empty) bands to be computed
istwfk1    6*1

# DATASET 2 : screening calculation
optdriver2  3
symmorphi2  0        #use only symmorphic operations
symchi2     0
getkss2    -1
#npwwfn2     563 # 6 hartree 
ecutwfn2    6 
#npweps2     41  # 1.1 hartree
ecuteps2    1.1
fftgw2      11
nband2      50
inclvkb2    0 #1

# DATASET 3 : sigma calculation
optdriver3 4
symmorphi3  0        #use only symmorphic operations
symsigma3  0
getkss3   -2
getscr3   -1
ppmodel3   1
#npwsigx3   563
ecutsigx3  6
#npwwfn3    563
ecutwfn3   6
fftgw3      11
nband3      60
nkptgw3     1
kptgw3   0.0  0.0  1/4
bdgw3    24  25
zcut3     0.1 eV


# DATASET 4 : KSS calculations using only symmorphic operations
symmorphi4  1        # use also non-symmorphic operations
nbandkss4   50       # number of bands in kss file (-1 means the maximum possible)
nband4      24       # number of (occ and empty) bands to be computed
istwfk4    6*1

# DATASET 5 : screening calculation
optdriver5  3
symchi5     1
getkss5    -1
#npwwfn5     563 
ecutwfn5    6
#npweps5     41
ecuteps5    1.1
fftgw5      11
nband5      50
inclvkb5    0 #1 #2 this should be 2 but I have to code this part

# DATASET 6 : sigma calculation
optdriver6 4
symsigma6  1
getkss6   -2
getscr6   -1
ppmodel6   1
#npwsigx6   563
ecutsigx6   6
#npwwfn6    563
ecutwfn6    6
fftgw6      11
nband6      50
nkptgw6     1
kptgw6   0.0  0.0  1/4
bdgw6    24  25
zcut6     0.1 eV


#################### COMMON PART #########################

# number of self-consistent field steps
nstep        20
diemac       4.0
tolvrs       1d-5
# energy cutoff [Ha]:
ecut         6    

#Definition of the k-point grid
occopt 1           # Semiconductor
kptopt 1           # Option for the automatic generation of k points, taking
                   # into account the symmetry

ngkpt   3 3 2       
nshiftk  1        
shiftk  0.0 0.0 0.5

# Definition of the atom types
npsp   2                
znucl  14  8  
ntypat 2            

# Definition of the atoms
natom 9          
typat 3*1  6*2     

# Experimental parameters (Wyckoff pag 312)
# u(Si)= 0.465
# x= 0.415 ; y= 0.272 ; z= 0.120

acell   2*4.91304  5.40463  Angstrom 
  
xred   0.465   0.000   0.000              #Si
       0.000   0.465   2/3                #Si
      -0.465  -0.465   1/3                #Si
       0.415   0.272   0.120              #O
      -0.143  -0.415   0.4533333333333333 #O
      -0.272   0.143   0.7866666666666666 #O
       0.143  -0.272  -0.120              #O
       0.272   0.415   0.5466666666666666 #O
      -0.415  -0.143   0.2133333333333333 #O

rprim   5.0000000000e-01 -8.6602540378e-01  0.0000000000e+00
        5.0000000000e-01  8.6602540378e-01  0.0000000000e+00
        0.0000000000e+00  0.0000000000e+00  1.0000000000e+00
