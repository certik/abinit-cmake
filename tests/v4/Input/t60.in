# MgAl2 with CdI2 structure  -  to test metallic Q=0 0 0 phonons
# verifies that 1st-order Fermi energy is functioning properly

 ndtset   3

# Set 1 : initial self-consistency

#irdwfk1   1
   iscf1   3
 kptopt1   1
 prtden1   1
 tolvrs1   1.0d-10

# Set 2 : wavefunction convergence

 getden2   -1
 getwfk2   -1
   iscf2   -2
 kptopt2   1
 tolwfr2   1.0d-10

# Set 3 : response-function phonon calculation

 getwfk3   -1
   iscf3   3
 kptopt3   2
   nqpt3   1
    qpt3   0  0  0
rfatpol3   2  2
  rfdir3   0  0  1
 rfphon3   1
 tolvrs3   1.0d-8

# common input data

  acell   5.581  5.581  13.180
 angdeg   90.0  90.0  120.0
   ecut   5.0
  natom   3
  nband   8
  ngkpt   6 6 4
nshiftk   1
  nstep   50
 ntypat   2
 occopt   3
 shiftk   0.0 0.0 0.5
 tsmear   0.003
  typat   1  2  2
   xred   0.0  0.0  0.0
          1/3  2/3  0.3433
          2/3  1/3 -0.3433
  znucl   12 13
# This line added when defaults were changed (v5.3) to keep the previous, old behaviour
  iscf 5
