# Si in diamond structure
 acell 3*10.25
 rprim   0 .5 .5  .5 0 .5  .5 .5 0
 natom  2
 ntypat  1
 typat  2*1
 xred   0.000  0.000  0.000
        0.250  0.250  0.250
 znucl 14.0
 ecut 6
 symmorphi 0

 enunit 2
 intxc  1

 ndtset 6
# wavefunction calculation
 kptopt1       1
 ngkpt1        2 2 2
 nshiftk1      4
 shiftk1       0.5 0.5 0.5
               0.5 0.0 0.0
               0.0 0.5 0.0
               0.0 0.0 0.5
 mkmem1        0

 nbandkss1     -1
 npwkss1      0
 occopt1       1

 prtvol1       0
 nline1        3
 nstep1       10
 tolwfr1       1.0d-16

# chieps calculation
 optdriver2 3
 getkss2   -1
 nband2    10
 npweps2   27
 npwwfn2   27
 ppmfrq2  16.5 eV

# sigma calculation
 optdriver3 4
 getkss3   -2
 getscr3   -1
 ppmodel3   1
 npwsigx3   27
 npwwfn3    27
 nkptgw3     1
 kptgw3   0.250  0.750  0.250
 bdgw3    4  5
 ppmfrq3  16.5 eV
 zcut3      0.1 eV

# sigma calculation
 optdriver4 4
 getkss4   -3
 getscr4   -2
 ppmodel4   2
 npwsigx4   27
 npwwfn4    27
 nkptgw4     1
 kptgw4   0.250  0.750  0.250
 bdgw4    4  5
 zcut4      0.1 eV

# sigma calculation
 optdriver5 4
 getkss5   -4
 getscr5   -3
 ppmodel5   3
 npwsigx5   27
 npwwfn5    27
 nkptgw5     1
 kptgw5   0.250  0.750  0.250
 bdgw5    4  5
 zcut5      0.1 eV

# sigma calculation
 optdriver6 4
 getkss6   -5
 getscr6   -4
 ppmodel6   4
 npwsigx6   27
 npwwfn6    27
 nkptgw6     1
 kptgw6   0.250  0.750  0.250
 bdgw6    4  5
 zcut6      0.1 eV

# valid for all datasets

 nband     10

# This line added when defaults were changed (v5.3) to keep the previous, old behaviour
  iscf 5
