# Si in diamond structure; 2 special points; low ecut.
# Test wfoptalg

 ndtset 4

#Dataset 2 should be similar to default case
 wfoptalg2 1
 nbdblock2 1

#Dataset 3 use two bands in a block
 wfoptalg3 1
 nbdblock3 2

#Dataset 4 use four bands in a block
 wfoptalg4 1
 nbdblock4 4

#Common data
 acell 3*10.26311
 diemac 12.0d0
 ecut 5.8
 kpt   1 1 1     1 2 2   kptnrm 4
 natom  2 nband 4
 nkpt  2
 nstep 10
 ntypat  1
 rprim   0 .5 .5  .5 0 .5  .5 .5 0
 tolwfr 1.0d-14
 typat  1 1  
 wtk   1 3
 xred 3*0.00d0 3*0.25d0
 znucl 14
# This line added when defaults were changed (v5.3) to keep the previous, old behaviour
  iscf 5
