# Run bcc Fe for a fixed lattice constant with a constrained spin moment

ndtset 1
fixmom 0.50

getwfk -1

nband 6

# Spin-polarized calculation
 nsppol 2
 spinat 0.0 0.0 3.0

ixc 11

# Unit cell parameters
 acell 3*5.4235
 rprim -0.5  0.5  0.5
        0.5 -0.5  0.5
        0.5  0.5 -0.5

# Chemical cell type
 ntypat 1
 znucl 26.0
 natom 1
 typat  1
 xred 0.0 0.0 0.0

# Stop before convergence, for speed
 nstep 15 
 toldfe 1.0d-8

# PW cutoff
 ecut 18.0

# Fermi-Dirac occupation numbers
 occopt 3
 tsmear 0.0073 

# Automatic generation of k-points
 kptopt 1
 ngkpt  4 4 4
 nshiftk 2
 shiftk
   0.25  0.25  0.25
  -0.25 -0.25 -0.25

diemac 1.0
diemix 0.5
# This line added when defaults were changed (v5.3) to keep the previous, old behaviour
  iscf 5
